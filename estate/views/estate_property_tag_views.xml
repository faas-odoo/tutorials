<?xml version="1.0"?>
<odoo>
    <record id="view_estate_property_tag_model_tree_custom" model="ir.ui.view">
        <field name="name">estate.property.tag.list</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <tree string="Estate Tag Model List" editable="bottom">
                <field name="name" />
            </tree>
        </field>
    </record>

    <!-- Estate property type action -->
    <record id="estate_property_tag_action" model="ir.actions.act_window">
        <field name="name">Property Tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_estate_property_tag_model_tree_custom" />    </record>
</odoo>